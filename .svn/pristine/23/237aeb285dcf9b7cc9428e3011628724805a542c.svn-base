@model Cinema.Web.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "Change password";
}

<div class="page-header">
    <h1>Change password</h1>
</div>

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new {@class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.Partial("FormValidation")
    <div class="form-group">
        @Html.LabelFor(x => x.OldPassword, new {@class = "control-label col-sm-2"})
        @Html.PasswordFor(x => x.OldPassword, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.NewPassword, new {@class = "control-label col-sm-2"})
        @Html.PasswordFor(x => x.NewPassword, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.NewPasswordConfirm, new {@class = "control-label col-sm-2"})
        @Html.PasswordFor(x => x.NewPasswordConfirm, new {@class = "form-control"})
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-success" value="Change password" />
        </div>
    </div>
}
<hr />
<div>
    @Html.ActionLink("< My profile", "MyProfile")
</div>
