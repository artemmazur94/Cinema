@model Cinema.Web.Models.ProfileViewModel

@{
    ViewBag.Title = "Edit profile";
}


<div class="page-header">
    <h1>Edit profile</h1>
</div>

@using (Html.BeginForm("EditProfile", "Account", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.Id)

    @Html.Partial("FormValidation")

    <div class="form-group">
        @Html.LabelFor(x => x.Name, new {@class = "control-label col-sm-2"})
        @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Surname, new {@class = "control-label col-sm-2"})
        @Html.TextBoxFor(x => x.Surname, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Phone, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Input your phone number" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Photo, new {@class = "control-label col-sm-2"})
        @Html.TextBoxFor(x => x.Photo, new { @type = "file" })
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input class="btn btn-success" type="submit" value="Edit profile"/>
        </div>
    </div>
}

<script src="@Url.Content("~/Scripts/jquery.maskedinput.js")" type="text/javascript"></script>
<script>
    $("#Phone").mask("+38 (999) 999-99-99");
</script>