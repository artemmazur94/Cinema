@model Cinema.Web.Models.EmailViewModel

@{
    ViewBag.Title = "Restore password";
}
<div class="page-header">
    <h1>Restore password</h1>
</div>

@using (Html.BeginForm("RestorePassword", "Account", FormMethod.Post, new { @class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @Html.ValidationSummary()
        </div>
        }
    <div class="alert alert-info">
        <strong>Info!</strong> Input your email to get a mail with link to restore your password.
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Email, new {@class = "control-label col-sm-2"})
        @Html.TextBoxFor(x => x.Email, new {@class = "form-control col-sm-10"})
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-success" value="Restore password" />
        </div>
    </div>
}