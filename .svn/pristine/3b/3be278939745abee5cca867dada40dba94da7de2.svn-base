@model Cinema.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="page-header">
    <h1>Login</h1>
</div>

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.Partial("FormValidation")

    <div class="form-group">
        @Html.LabelFor(x => x.Username, new {@class = "control-label col-sm-2"})
        @Html.TextBoxFor(x => x.Username, new {@class = "form-control col-sm-10"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Password, new {@class = "control-label col-sm-2"})
        @Html.PasswordFor(x => x.Password, new {@class = "form-control col-sm-10"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.RememberMe, new {@class = "control-label col-sm-2"})
        @Html.CheckBoxFor(x => x.RememberMe, new {@class="checkbox", @style="display: inline"})
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-success" value="Login"/>
        </div>
    </div>
}
<hr />
<div>
    <a href="@Url.Action("RestorePassword", "Account")"><span class="glyphicon glyphicon-wrench"></span> Restore password</a>
</div>