@model Cinema.Web.Models.UpdatePasswordViewModel

@{
    ViewBag.Title = "Update password";
}

<div class="page-header">
    <h1>Update password</h1>
</div>
@using (Html.BeginForm("UpdatePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.Partial("FormValidation")
    @Html.HiddenFor(x => x.Token)
    <div class="form-group">
        @Html.LabelFor(x => x.Username, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(x => x.Username, new { @class = "form-control col-sm-10", @readonly="true"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Password, new { @class = "control-label col-sm-2" })
        @Html.PasswordFor(x => x.Password, new { @class = "form-control col-sm-10" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ConfirmPassword, new { @class = "control-label col-sm-2" })
        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control col-sm-10" })
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-success" value="Update password" />
        </div>
    </div>
}