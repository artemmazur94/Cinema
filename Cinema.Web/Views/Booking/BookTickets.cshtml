@using Cinema.Web.Helpers
@model Cinema.Web.Models.SeanceViewModel

@{
    ViewBag.Title = "Book tickets";
}

<script src="~/Scripts/jquery.countdown.js"></script>
<script type="text/javascript">
    var myActionUrl = '@Url.Action("SelectPlace", "Booking")';
    var seanceId = @Model.Id;
</script>

<br />
<div class="jumbotron">
    <h2>Book tickets on movie: @Model.MovieName</h2>
    <hr/>
    <div class="row">
        <div class="col-sm-4">
            <h3>
                <strong>Seance information: </strong>
            </h3>
        </div>
        <div class="col-sm-8">
            <br/>
            <div class="col-sm-6">
                @Html.LabelFor(x => x.Date)
                @Model.Date.ToShortDateString()
            </div>
            <div class="col-sm-6">
                @Html.LabelFor(x => x.Time)
                @Model.Time.ToString()
            </div>
            <div class="col-sm-6">
                @Html.LabelFor(x => x.HallName)
                @Model.HallName
            </div>
            <div class="col-sm-6">
                @Html.LabelFor(x => x.Price)
                @Model.Price
            </div>
        </div>
    </div>
</div>
@if (Model.HallPlan != null)
{
    <div class="row">
        <div class="col-sm-12">
            <div class="text-center">
                <h3>You can book tickets before the time expires:</h3>
                <h3 id="clock"></h3>
            </div>
            <hr/>
            <div class="hall">
                @for (var i = Model.HallPlan.Count; i > 0; i--)
                {
                    <div class="hall-row">
                        <span class="label label-default">Row @i</span>
                        @for (var j = 1; j <= Model.HallPlan[i].Count; j++)
                        {
                            switch (Model.HallPlan[i][j])
                            {
                                case (int) SeatType.Single:
                                    <button type="button" class="btn btn-primary seat" data-row="@i" data-place="@j">@j</button>
                                    break;
                                case (int) SeatType.Double:
                                    <button type="button" class="btn btn-info seat" data-row="@i" data-place="@j">@j</button>
                                    break;
                                case (int) SeatType._4D:
                                    <button type="button" class="btn btn-danger seat" data-row="@i" data-place="@j">@j</button>
                                    break;
                            }
                        }
                    </div>
                }
            </div>
        </div>
    </div>
}
<hr/>
@Html.ActionLink("< Back to seances", "Seances", new { id = Model.MovieId})