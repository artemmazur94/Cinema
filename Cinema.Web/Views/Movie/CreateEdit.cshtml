@model Cinema.Web.Models.MovieAddEditViewModel

@{
    var operation = Model.Id > 0 ? "Edit" : "Add";
    ViewBag.Title = operation + " movie";
}

<script type="text/javascript" src="~/Scripts/select2.js"></script>
<link rel="stylesheet" href="~/Content/css/select2.css"/>
<link rel="stylesheet" href="~/Content/bootstrap-fileinput/css/fileinput.min.css"/>

<script type="text/javascript">
    $(document).ready(function() {
        $("#ActorIds").select2({
            closeOnSelect: false,
            placeholder: "Please, select actors"
        });
    });
</script>

<div class="page-header">
    <h1>@operation movie</h1>
</div>

@using (Html.BeginForm("CreateEdit", "Movie", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    @Html.Partial("FormValidation")

    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control " })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Description, new { @class = "control-label col-sm-2" })
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = "5" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Length, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(x => x.Length, new { @class = "form-control", type = "number" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.GenreId, new { @class = "control-label col-sm-2" })
        @Html.DropDownListFor(x => x.GenreId, (SelectList)ViewBag.GenreLocalizations, "Select genre", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ReleaseDate, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(x => x.ReleaseDate, "{0:d}", new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.DirectorId, new {@class = "control-label col-sm-2"})
        @Html.DropDownListFor(x => x.DirectorId, (SelectList)ViewBag.DirectorLocalizations, "Select director", new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ActorIds, new {@class = "control-label col-sm-2"})
        @Html.ListBoxFor(x => x.ActorIds, (MultiSelectList)ViewBag.ActorsLocalizations, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Poster, new {@class = "control-label col-sm-2"})
        @Html.TextBoxFor(x => x.Poster, new {@type = "file", name="file"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.VideoLink, new {@class = "control-label col-sm-2"})
        @Html.TextBoxFor(x => x.VideoLink, new {@class = "form-control"})
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input class="btn btn-success" type="submit" value="@operation movie" />
        </div>
    </div>
}
<hr/>
<div>
    @Html.ActionLink("< Back to movie list", "Index")
</div>
